package com.office.school;

public class Student {
	//속성
	String name;	//이름
	int grade;	//학년
	int age;	//나이
	String major;	//전공
	float score;	// 학점
	
	//default 생성자
	public Student() {
		}
	//생성자
	public Student(String name, int grade, int age,String major, float score) {
		this.name = name;
		this.grade = grade;
		this.age = age;
		this.major = major;
		this.score = score;
		
	}
	
	//기능
	public void printInfo() {
		System.out.println("name:" +name);
		System.out.println("grade:" +grade);
		System.out.println("age:" +age);
		System.out.println("major:" +major);
		System.out.println("score:" +score);
		
	}

}
