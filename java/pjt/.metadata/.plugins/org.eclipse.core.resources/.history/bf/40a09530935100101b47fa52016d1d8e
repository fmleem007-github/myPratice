[MainClass]
package com.office.ourschool;

import java.util.Scanner;

public class MainClass {

   public static void main(String[] args) {
      
      final int REGIST_NEW_STUDENT       = 1;
      final int PRINT_STUDENT_INFO       = 2;
      final int PRINT_ALL_STUDENT_INFO    = 3;
      final int SYSTEM_OUT             = 99;
      
      boolean systemFlag = true;
      Scanner scanner = new Scanner(System.in);
      
      StudentManager studentManager = 
            new StudentManager();
      
      int idx = -1;   // 0
      
      while (systemFlag) {
         // 메뉴(1.신규학생등록   2.특정학생정보출력   3.전체학생정보출력   99.시스템종료)
         System.out.println("1.신규학생등록   2.특정학생정보출력   3.전체학생정보출력   99.시스템종료");
         
         int selectedMunuNum = scanner.nextInt();
         switch (selectedMunuNum) {
         case REGIST_NEW_STUDENT:
            
            idx++;   // 0, 1
            if (idx >= 2) {
               System.out.println("등록 할수 없어요. 정원 초과에요!!");
               
            } else {
               System.out.println("학년 입력: ");
               int grade = scanner.nextInt();
               
               System.out.println("반번호 입력: ");
               int classNo = scanner.nextInt();
               
               System.out.println("학생번호 입력: ");
               int studentNo = scanner.nextInt();   // \n
               
               scanner.nextLine();
               
               System.out.println("학생이름 입력: ");
               String studentName = scanner.nextLine();
               
               System.out.println("휴학구분 입력: ");
               boolean isAbsence = scanner.nextBoolean();
               
               NewStudent newStudent = new NewStudent(grade, classNo, studentNo, studentName, isAbsence);
               
               studentManager.addNewStudentAtStudents(idx, newStudent);
            }
            
            break;

         case PRINT_STUDENT_INFO:
            System.out.println("학생 인덱스 입력: ");
            int studentsIdxForSearch = scanner.nextInt();
            studentManager.printStudentInfo(studentsIdxForSearch);
            
            break;

         case PRINT_ALL_STUDENT_INFO:
            studentManager.printAllStudentInfo();
            break;

         case SYSTEM_OUT:
            systemFlag = false;
            System.out.println("SAY GOOD BYE~");
            break;

         }
         
      }
      
      scanner.close();
      
   }
   
}
